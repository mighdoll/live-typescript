{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src",
    "paths": {
      "rollup-plugin-remap-imports": [
        "../rollup-plugin-remap-imports/src/index.ts"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "buildOptions": {
    "outDir": "dist"
  }
}
